set -euo pipefail

cmd=$1; shift || true

_proj_root="$(cd "$( dirname "${BASH_SOURCE[0]}" )/../.." && pwd)"
yellow() { printf "\033[33m%s\033[0m\n" "$*"; }

case "$cmd" in
  check-lock)
    lock_file="$1"
    yellow "ðŸ”’  check-lock: $lock_file (syntax only)"
    yq e '.' "$lock_file" >/dev/null
    ;;
  digest-lock)
    lock_file="$1"
    yellow "âœ  digest-lock: replacing each REPLACE_ME with timestamp-based sha256"
    ts=$(date +%s)
    sed -i "s/REPLACE_ME/sha256:$ts/g" "$lock_file"
    ;;
  sbom-verify)
    yellow "ðŸ“¦  sbom-verify (stub, always pass)"
    ;;
  license-scan)
    yellow "ðŸ“  license-scan (stub, always pass)"
    ;;
  vuln-scan)
    yellow "ðŸž  vuln-scan (stub, always pass)"
    ;;
  kyverno-verify)
    yellow "ðŸ›¡  kyverno-verify (stub, always pass)"
    ;;
  lineage-validate)
    yellow "ðŸ•¸  lineage-validate (stub, always pass)"
    ;;
  *)
    echo "kb-tools: unknown subcommand $cmd" >&2
    exit 1
    ;;
esac
