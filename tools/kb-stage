#!/usr/bin/env bash
set -euo pipefail
HERE="$(cd "$(dirname "$0")" && pwd)"
ROOT="$(cd "$HERE/.." && pwd)"
BOOTSTRAP_TOOLS="$ROOT/.collab/bootstrap-tools/kb-stage"

if [ "${KB_BOOTSTRAP:-0}" != "1" ]; then
  echo "Error: KB_BOOTSTRAP must be set to 1" >&2
  exit 1
fi
if [ ! -x "$BOOTSTRAP_TOOLS" ]; then
  echo "Error: $BOOTSTRAP_TOOLS not found or not executable" >&2
  exit 1
fi

exec "$BOOTSTRAP_TOOLS" "$@"
